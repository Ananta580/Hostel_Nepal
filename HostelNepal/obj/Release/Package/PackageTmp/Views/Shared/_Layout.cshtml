                            Visit
                        </a>
                        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                            <a class="dropdown-item" href="@Url.Action("Index","Warden")">Wardens</a>
                            <a class="dropdown-item" href="@Url.Action("Index","Hostel")">Hostels</a>
                            <a class="dropdown-item" href="@Url.Action("Index","Student")">Testimonials</a>
                        </div>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Contact","Office")">Contact</a>
                    </li>

                    @if (Request.IsAuthenticated)
                    {


                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown"
                               aria-haspopup="true" aria-expanded="false">
                                <span class="text-uppercase">@User.Identity.Name<span>  </span>@Html.Action("Photo", "Account", new { name = @User.Identity.Name })</span>

                            </a>
                            @if (User.IsInRole("Admin"))
                            {
                        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                            <a class="dropdown-item" href="@Url.Action("Banner", "Admin")">Manage Banner<span class="ion-md-brush pull-right"></span></a>
                            <a class="dropdown-item" href="@Url.Action("News", "Admin")">Post News<span class="ion-md-eye pull-right"></span></a>
                            @using (Html.BeginForm("LogOut", "MAccount", FormMethod.Post, new { id = "logoutForm" }))
                            {
                            <a class="dropdown-item" href="Javascript:document.getElementById('logoutForm').submit()">Log Out<span class="ion-md-exit pull-right"></span></a>
                            }
                        </div>
                            }

                            @if (User.IsInRole("Student"))
                            {
                                <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                                    <a class="dropdown-item" href="@Url.Action("Edit", "Account")">Manage Account<span class="ion-md-brush pull-right"></span></a>
                                    <a class="dropdown-item" href="@Url.Action("StudentChoice", "Hostel")">Your Choices<span class="ion-md-eye pull-right"></span></a>
                                    <a class="dropdown-item" href="@Url.Action("LogOut", "Account")">Log Out<span class="ion-md-exit pull-right"></span></a>
                                </div>
                            }
                            @if (User.IsInRole("Warden"))
                            {
                                <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                                    <a class="dropdown-item" href="@Url.Action("AddOrEdit", "Hostel")">Add Hostel<span class="ion-md-brush pull-right"></span></a>
                                    <a class="dropdown-item" href="@Url.Action("HostelIndex", "Hostel")">Your Hostel<span class="ion-md-eye pull-right"></span></a>
                                    <a class="dropdown-item" href="@Url.Action("Edit", "Account")">Manage Account<span class="ion-md-eye pull-right"></span></a>
                                    <a class="dropdown-item" href="@Url.Action("LogOut", "Account")">Log Out<span class="ion-md-exit pull-right"></span></a>
                                </div>
                            }
                        </li>
                    }
                    else
                    {
                        <!-- Modal -->
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Login","Account")">Login  <span class="ion-ios-log-in"></span></a>
                        </li>

