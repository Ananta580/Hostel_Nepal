                <span class="fa fa-search" aria-hidden="true"></span>
            </button>
            <div class="navbar-collapse collapse justify-content-center" id="navbarDefault">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link " href="@Url.Action("Index","Opening")">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" onclick="myActive(class { })" href="@Url.Action("Index","Hostel")">Hostel</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("BestChoice","Hostel")">Best Choice</a>
                    </li>
                    <li class="nav-item dropdown">
